@import "app";

.sg-icon-martrix {
  th {
    padding: 20px 10px 10px;
    border-top: 1px solid;
  }
  tr:first-child > th {
    padding-top: 0;
    border-top: none;
  }
  td {
    padding: 10px;
    vertical-align: baseline;
  }
}
.sg-icon {
  @include sg-icon-before;
}
<% for glyph in @glyphs: %>
.sg-icon-<%- glyph.name %> {
  &:before {
    content: $icon-<%- glyph.name %>
  }
}
<% end %>
